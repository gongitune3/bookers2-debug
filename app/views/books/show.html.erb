
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user:@user %>

		<h2>New book</h2>
		<%= render 'books/newform', book:@book%>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@mybook.user) do %>
						<%= attachment_image_tag(@mybook.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @mybook.user.name %>
						<% end %>
					</td>
					<td><%= link_to @mybook.title, @mybook %></td>
					<td><%= @mybook.body %></td>
					<% if @mybook.user_id == current_user.id %>
						<td><%= link_to "Edit",edit_book_path(@mybook), class: "btn-sm btn-success edit_book_#{@mybook.id}" %></td>
						<td><%= link_to "Destroy",@mybook, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@mybook.id}" %></td>
					<% end %>
				</tr>
			</table>

	</div>
</div>

